# OpenAI API Configuration (Required for RAG and best embeddings)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Embedding Configuration
USE_OPENAI_EMBEDDINGS=true  # Use OpenAI embeddings (recommended) or local sentence-transformers
OPENAI_EMBEDDING_MODEL=text-embedding-3-large  # Latest OpenAI embedding model (3072 dims)
LOCAL_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2  # Fallback local model

# LLM Configuration for RAG
LLM_MODEL=gpt-4o  # Latest GPT-4 Omni model (best reasoning)
LLM_TEMPERATURE=0.1  # Lower = more focused, Higher = more creative
LLM_MAX_TOKENS=4000  # Maximum tokens in response

# Vector Store Configuration
CHROMA_PERSIST_DIRECTORY=./data/chroma
CHROMA_COLLECTION_NAME=quant_knowledge

# Retrieval Configuration
MAX_RETRIEVAL_RESULTS=20  # Max chunks to retrieve
CONTEXT_TOKEN_LIMIT=8000  # Max tokens for context assembly

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
